@*model EditProfileViewModel*@
@using Microsoft.AspNetCore.Http
@{

}

<h2>Edit profile</h2>
<div class="align-content-center">

    <form asp-action="Edit" asp-controller="Profile" method="post">
        @*asp-area="Pupil"*@
        <div class="col-6 form-group">
            <div>Name: @Context.Session.GetString("name")</div>

        </div>
        <div class="col-6 form-group">
            <div>Surname: @Context.Session.GetString("surname")</div>

        </div>
        <div class="input-group">

            <div class="col-6 form-group">
                <label asp-for="Email">Email Address</label>
                <input asp-for="Email" class="form-control" type="email" />
            </div>
            <div class="col-6 form-group">
                <label asp-for="ConfirmEmail">Confirm Email</label>
                <input asp-for="ConfirmEmail" class="form-control" type="email" />
            </div>
        </div>
        <div class="input-group">
            <div class="col-6 form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="col-6 form-group">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" />
            </div>
        </div>
        <button type="submit" class="btn btn-primary">UPDATE PROFILE</button>
        <a asp-action="Index" asp-controller="Regional" asp->Cancel</a>@*asp-area="Pupil"*@
    </form>

</div>
