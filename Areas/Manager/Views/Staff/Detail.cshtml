@*@model TeacherVM*@
@using Microsoft.AspNetCore.Http
@{
    int? id = Context.Session.GetInt32("id");
}
@{
    ViewBag.Title = "View Teacher";
}
@if (TempData.Keys.Contains("data"))
{
    <h4 class="bg-info text-center text-white p-2">
        Viewing:
        @TempData["data"]
    </h4>
}
<div>
    <div class="align-content-center">
        <h2>@ViewBag.Title</h2>
        <dl class="row">
            <dt class="col-sm-2">
                @*@Html.DisplayNameFor(model => model.FirstName)*@
                <label>First Name &nbsp;</label>
            </dt>
            <dd class="col-sm-10">
                @*@Html.DisplayFor(model => model.FirstName)*@
                @foreach (var dt in ViewData.Model)
                {
                    @dt["FirstName"];
                }
            </dd>
            <dt class="col-sm-2">
                @*@Html.DisplayNameFor(model => model.Surname)*@
                <label>Surname&nbsp;</label>
            </dt>
            <dd class="col-sm-10">
                @*@Html.DisplayFor(model => model.Surname)*@
                @foreach (var dt in ViewData.Model)
                {
                    @dt["Surname"];
                }
            </dd>
            <dt class="col-sm-2">
                @*@Html.DisplayNameFor(model => model.EmailAddress)*@
                <label>Email Address&nbsp;</label>
            </dt>
            <dd class="col-sm-10">
                @*@Html.DisplayFor(model => model.EmailAddress)*@
                @foreach (var dt in ViewData.Model)
                {
                    @dt["EmailAddress"];
                }
            </dd>
            <dt class="col-sm-2">
                @*@Html.DisplayNameFor(model => model.UserType)*@
                <label>User Type&nbsp;</label>
            </dt>
            <dd class="col-sm-10">
                @*@Html.DisplayFor(model => model.UserType)*@
                @foreach (var dt in ViewData.Model)
                {
                    @dt["UserType"];
                }
            </dd>
            <dt class="col-sm-2">
                @*@Html.DisplayNameFor(model => model.UserStatus)*@
                <label>User Status&nbsp;</label>
            </dt>
            <dd class="col-sm-10">
                @*@Html.DisplayFor(model => model.UserStatus)*@
                @foreach (var dt in ViewData.Model)
                {
                    @dt["UserStatus"];
                }
            </dd>
        </dl>
    </div>
    <div class="w-100 btn-group" role="group">
        @foreach (var dt in ViewData.Model)
        {
            <a asp-controller="Staff" asp-action="Edit" asp-area="Manager" asp-route-id="@dt["UserID"]" class="btn btn-primary mx-1">Modify</a>
            <a asp-controller="Staff" asp-action="Index" asp-area="Manager" class="btn btn-primary mx-1">Back to List</a>
        }
    </div>
</div>