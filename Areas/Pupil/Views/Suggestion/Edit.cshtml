@model EditSuggestionView
@{ }

@if (TempData.Keys.Contains("data"))
{
<h4 class="bg-info text-center text-white p-2">
    Edit your suggestion:
    
</h4>}

<div class="align-content-center">
    <h2>@ViewBag.Title</h2>
    <form asp-action="Edit" asp-controller="Suggestion" asp-area="Pupil" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">

            <label asp-for="Suggestion">Edit your suggestion</label>
            <textarea class="form-control" asp-for="Suggestion" placeholder="@ViewBag.Description" rows="7"></textarea>


        </div>
        <button type="submit" class="btn btn-primary">Edit suggestion</button>
        <a asp-action="List" asp-controller="Suggestion" asp-area="Pupil" class="btn btn-primary">Cancel</a>
    </form>
</div>
