@model IEnumerable<DigeraitMIS.Models.User>
@{ 
    Layout = "_ManagerLayout";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Your Profile</h2>
        </div>

    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Surname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EmailAddress)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.UserType)
                    </th>*@

                    <th>
                        @Html.DisplayNameFor(model => model.UserStatus)
                    </th>

                    <th>
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => user.FirstName)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => user.Surname)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => user.EmailAddress)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => user.UserStatus)
                        </td>
                        <td>
                            <div class="w-100 btn-group" role="group">
                                <a asp-action="Update" asp-route-id="@user.UserID" class="btn btn-primary mx-1">Update</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet</p>
    }

</div>