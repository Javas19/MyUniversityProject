@model IEnumerable<DigeraitMIS.Models.Transaction>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Transaction List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Transaction" asp-action="Create" class="btn btn-primary">Create new Transaction</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ReferenceNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TransactionType)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.CentreNo)
                    </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var transaction in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => transaction.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => transaction.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => transaction.ReferenceNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => transaction.TransactionType)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.CentreNo)
                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => transaction.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => transaction.Description)
                        </td>
                        <td>
                            <div class="w-100 btn-group" role="group">
                                <a asp-action ="Update" asp-route-id ="@transaction.TransactionID" class="btn btn-primary mx-1">Update</a>
                                <a asp-action="Delete" asp-route-id="@transaction.TransactionID" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet</p>
    }

</div>