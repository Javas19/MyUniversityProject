@model IEnumerable<DigeraitMIS.Models.CentreProfile>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Centre Profile</h2>
        </div>
        @*<div class="col-6 text-right">
                <a asp-controller="CentreProfile" asp-action="Create" class="btn btn-primary">Create new</a>
            </div>*@
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AddressLine1)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AddressLine2)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RegistrationNo)
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.RegionID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ManagerID)
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var centre in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => centre.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => centre.AddressLine1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => centre.AddressLine2)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => centre.RegistrationNo)
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => centre.Status)
                            </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => centre.RegionID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => centre.ManagerID)
                        </td>
                        <td>
                            <div class="w-100 btn-group" role="group">
                                <a asp-action="Update" asp-route-id="@centre.CentreNo" class="btn btn-primary mx-1">Update</a>
                                @*<a asp-action="Delete" asp-route-id="@centre.CentreNo" class="btn btn-danger mx-1">Delete</a>*@
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet</p>
    }
</div>