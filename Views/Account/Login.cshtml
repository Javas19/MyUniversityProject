@model LoginViewModel
@{ ViewBag.Title = "Login";
                Layout = null; }

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DigeraitMIS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <div class="container">
        <main>
            <div class="text-center">
                <img id="logo" alt="MIT Logo" src="~/ECDC MIS logo.png" class="img-fluid rounded" />
            </div>
            <div class="text-center">
                <h3>@ViewBag.Title</h3>
            </div>


            <form asp-controller="Account" asp-action="Login" method="post">
                <div class="text-center">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        @*<label asp-for="Email" >Email</label>*@
                        <input class="form-control offset-md-3" type="email" asp-for="Email" style="width:50%" placeholder="Email" />
                    </div>
                    <div class="form-group">
                        @*<label asp-for="Password" >Password</label>*@
                        <input class="form-control offset-md-3" type="password" asp-for="Password" style="width:50%" placeholder="Password" />
                    </div>
                </div>
                @*<input type="hidden" asp-route-id="@Model.userID" />*@
                <button class="btn btn-primary offset-md-3" type="submit">Login</button>
                <a asp-controller="Account" asp-action="Register" class="btn btn-primary ">Register</a>
            </form>
        </main>
    </div>
</body>
